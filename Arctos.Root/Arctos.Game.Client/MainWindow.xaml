            <gameGui:GridAwareItemsControl  ItemsSource="{Binding Game.AreaList, UpdateSourceTrigger=PropertyChanged}" d:DataContext="{d:DesignInstance gameGui:MainWindow}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid gameGui:GridAutoLayout.NumberOfRows="{Binding GameRows}"
                  gameGui:GridAutoLayout.NumberOfColumns="{Binding GameColumns}">
                    </Grid>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Label
                Grid.Row="{Binding Row}"
                Grid.Column="{Binding Column}"
                Background="{Binding Color}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                        Margin="10"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </gameGui:GridAwareItemsControl>
    </Grid>
    </StackPanel>
